version: '3'
services:
  db:
    image: docker.io/mysql:5.7
    container_name: faster-mysql
    privileged: true
    environment:
      # 设置默认数据库和root默认密码,如果宿主机中/var/lib/mysql已经存在,这两个设置都不会生效
      - MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}
      - MYSQL_USER=${MYSQL_USER}
      - MYSQL_PASSWORD=${MYSQL_PASSWORD}
      - MYSQL_DATABASE=${MYSQL_DATABASE}
    volumes:
      - ./mysql:/var/lib/mysql # 挂载宿主机的mysql数据到docker中
      - ./db/my.cnf:/etc/mysql/mysql.conf.d/mysqld.cnf
      - ./db:/docker-entrypoint-initdb.d/:ro
    # 端口映射,格式 宿主机端口:容器端口
    ports:
      - "3306:3306"
    restart: always
    command: --character-set-server=utf8mb4 --collation-server=utf8mb4_unicode_ci --socket=/var/lib/mysql/mysql.sock


  app:
    image: fasterrunner_app:latest
    container_name: faster-app
    build:
      context: .
      dockerfile: Dockerfile
    environment:
#      - MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}
      - MYSQL_USER=${MYSQL_USER}
      - MYSQL_PASSWORD=${MYSQL_PASSWORD}
      - MYSQL_DATABASE=${MYSQL_DATABASE}
      - RABBITMQ_DEFAULT_USER=${RABBITMQ_DEFAULT_USER}
      - RABBITMQ_DEFAULT_PASS=${RABBITMQ_DEFAULT_PASS}
      - MQ_PORT=${MQ_PORT}
      - SENTRY_DSN=${SENTRY_DSN}
    entrypoint: /bin/sh
    command: -c "/usr/local/bin/python -m gunicorn FasterRunner.wsgi_docker -b 0.0.0.0 -w 4"
    depends_on:
      - db
    ports:
      - "${DJANGO_API_PORT}:8000"
    restart: always

  celery-worker:
    image: fasterrunner_app:latest
    build:
      context: .
      dockerfile: Dockerfile
    environment:
      - MYSQL_USER=${MYSQL_USER}
      - MYSQL_PASSWORD=${MYSQL_PASSWORD}
      - MYSQL_DATABASE=${MYSQL_DATABASE}
      - RABBITMQ_DEFAULT_USER=${RABBITMQ_DEFAULT_USER}
      - RABBITMQ_DEFAULT_PASS=${RABBITMQ_DEFAULT_PASS}
      - MQ_PORT=${MQ_PORT}
      - SERVER_IP=${SERVER_IP}
      - DJANGO_API_PORT=${DJANGO_API_PORT}
    entrypoint: /bin/sh
    command: -c "/app/start.sh celery-worker"
    restart: always
    depends_on:
      - db
      - mq

  celery-beat:
    image: fasterrunner_app:latest
    build:
      context: .
      dockerfile: Dockerfile
    environment:
      - MYSQL_USER=${MYSQL_USER}
      - MYSQL_PASSWORD=${MYSQL_PASSWORD}
      - MYSQL_DATABASE=${MYSQL_DATABASE}
      - RABBITMQ_DEFAULT_USER=${RABBITMQ_DEFAULT_USER}
      - RABBITMQ_DEFAULT_PASS=${RABBITMQ_DEFAULT_PASS}
      - MQ_PORT=${MQ_PORT}
    entrypoint: /bin/sh
    command: -c "/app/start.sh celery-beat"
    restart: always
    depends_on:
      - mq
      - db

# django-admin & app proxy
  nginx:
    build: ./nginx
    ports:
      - "${DJANGO_ADMIN_PORT}:80"
    depends_on:
      - app
    restart: always
    environment:
      - MYSQL_USER=${MYSQL_USER}
      - MYSQL_PASSWORD=${MYSQL_PASSWORD}
      - MYSQL_DATABASE=${MYSQL_DATABASE}


  web:
    image: fasterrunner_web:latest
    build:
      context: ./web
      dockerfile: Dockerfile
    ports:
      - "${WEB_PORT}:8888"
    volumes:
      - ./web/dist:/usr/share/nginx/html

  mq:
    image: rabbitmq:management-alpine
    environment:
      - RABBITMQ_DEFAULT_USER=${RABBITMQ_DEFAULT_USER}
      - RABBITMQ_DEFAULT_PASS=${RABBITMQ_DEFAULT_PASS}
      - MYSQL_DATABASE=${MYSQL_DATABASE}
    restart: always
    ports:
      - "${MQ_ADMIN_PORT}:15672"
      - "${MQ_PORT}:5672"


